<Window x:Class="PackageDependencyAnalyzer.Controls.XmlEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PackageDependencyAnalyzer.Controls"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <avalonedit:TextEditor Margin="0,0,0,20" x:Name="Editor" SyntaxHighlighting="XML" ShowLineNumbers="True" Padding="2" WordWrap="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" />
        <Button Padding="3,0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="SaveAndClose_OnClick">Save and Close</Button>
    </Grid>
</Window>
